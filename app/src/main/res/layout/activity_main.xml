<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khilanmakwana.scamesdice.MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:text="Your Score" />

    <TextView
        android:id="@+id/yourscore"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="0"
        tools:text="0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/yourscore"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/yourscore"
        android:layout_toRightOf="@+id/yourscore"
        android:text="Computer Score"
        tools:text="Computer Score" />

    <TextView
        android:id="@+id/cscore"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:text="0"
        tools:text="0" />

    <Button
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="124dp"
        android:text="Roll"
        tools:text="ROLL" />

    <Button
        android:id="@+id/hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/roll"
        android:layout_alignBottom="@+id/roll"
        android:layout_centerHorizontal="true"
        android:text="Hold"
        tools:text="HOLD" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hold"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/hold"
        android:layout_toRightOf="@+id/hold"
        android:text="Reset"
        tools:text="RESET" />

    <ImageView
        android:id="@+id/dice_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourscore"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        app:srcCompat="@drawable/dice1" />

    <TextView
        android:id="@+id/temp_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/hold"
        android:layout_marginTop="32dp"
        android:text="0" />

    <TextView
        android:id="@+id/turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/yourscore"
        android:layout_alignRight="@+id/yourscore"
        android:layout_alignTop="@+id/temp_score"
        android:text="Turn" />

</RelativeLayout>
